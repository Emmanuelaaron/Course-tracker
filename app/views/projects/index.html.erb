<header>
    <div class="d-flex  flex-row justify-content-around pt-5 pb-5 col-12 proj">
        <div class=""><i class="fa fa-bars"></i></div>
        <div>PROJECTS</div>
        <div><i class="fa fa-search"></i></div>
    </div>
    <div class="d-flex most-recent justify-content-end  mr-5 pr-5">
        <div>Most recent</div>
        <div class="ml-5">Most acient</div>
    </div>
</header>
<div class="d-flex days flex-row justify-content-between bg-light col-12 py-5 mb-5 pl-4 pr-4">
    <div>Total days</div>
    <div><%=@days%></div>
</div>
<% @projects.each do |project|%>
    <div class="profile_content bg-light mr-3 ml-3 d-flex justify-content-between pl-4 pr-4 align-items-center mb-4">
        <div><%=project.name%></div> 
        <div><%=project.amount%> days</div>
    </div>
    
<%end%>
<footer class="d-flex align-items-center justify-content-center">
    <span class="border border-white span-footer">
        <%= link_to 'Add Project', new_project_path%>
    </span>
</footer>

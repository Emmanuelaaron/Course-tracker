<%# <h1>Login</h1> %>
<div class="login">
   <%= form_tag login_path do %>
      <%= text_field_tag :username,nil, class:'form-control login-input',placeholder: "User name"%><br>
      <%= submit_tag "Login", class:'form-control login-input'%>
   <%end%>
</div>

<footer class="d-flex align-items-center justify-content-center">
   <span class="border border-white span-footer">
      <%= link_to 'Sign Up', new_user_path%>
   </span>
</footer>
